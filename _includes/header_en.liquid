<div id="photomag">
    <a href="{{ page.data.relpath }}{{ site.data.person.photoname }}_big.jpg">
      <img src="{{ page.data.relpath }}photo.jpg"  width=180 height=240 title="DONNTU Master {{ site.data.person.en.sername }} {{ site.data.person.en.name }}" alt="DonNTU Master {{ site.data.person.en.sername }} {{ site.data.person.en.name }}" border=0>
    </a>
</div>
<div id="headertext">
	<h1 class="hdr">{{ site.data.person.en.name }} {{ site.data.person.en.sername }}</h1>
	<h3 class="hdr">{{ site.data.person.en.faculty }}</h3>
	{% if site.data.person.en.department %}<h3 class="hdr">{{ site.data.person.en.department }}</h3>{%endif%}{% if site.data.person.en.field %}<h3 class="hdr">Field of study <q>{{ site.data.person.en.field }}</q></h3>{%endif%}
	<h3 class="hdr">Speciality <q>{{ site.data.person.en.speciality }}</q></h3>
	<h2 class="hdr">{{ site.data.person.en.diss_name }}</h2>
	<h3 class="hdr">Scientific adviser: {{ site.data.person.en.adviser_title }} {{ site.data.person.en.adviser }}</h3>
</div>